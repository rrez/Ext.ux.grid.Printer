{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "globals": {
        "Ext": "readonly"
    },
    "extends": [
        "airbnb/base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-param-reassign": ["error", {
            "props": false
        }],
        "no-console": "error",
        "no-fallthrough": "off",
        "no-plusplus": ["error", {
            "allowForLoopAfterthoughts": true
        }],
        "no-underscore-dangle": "warn"
    }
}